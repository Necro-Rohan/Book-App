generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  AVAILABLE
  MAINTENANCE
  LOANED
  RESERVED
}

model Book {
  id    Int    @id @default(autoincrement())
  title String
  summary String
  isbn String 
  genre BookGenre[]
  // url String
  author Author @relation(fields: [authorId], references: [id])
  authorId Int
  instance BookInstance[]
}

model Author {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  dateOfBirth DateTime
  dateOfDeath DateTime?
  name String
  lifeSpan String?
  // url String
  books Book[]
}

model Genre{
  id Int @id @default(autoincrement())
  name String
  books BookGenre[]
}

model BookGenre {
  bookId Int
  genreId Int 
  book Book @relation(fields: [bookId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([bookId, genreId])
}

model BookInstance {
  id Int @id @default(autoincrement())
  imprint String
  status BookStatus @default(AVAILABLE)
  dueBack DateTime?
  book Book @relation(fields: [bookId], references: [id])
  bookId Int
}




